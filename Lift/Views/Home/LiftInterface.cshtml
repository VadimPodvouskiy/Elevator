                            <!--Кнопочка 5-->
                            <td>
                                <div class="status-diode">
                                    <text>5</text>
                                </div>
                            </td>

                            <!--Кнопочка 7-->
                            <td>
                                <div class="status-diode">
                                    <text>7</text>
                                </div>
                            </td>

                            <!--Кнопочка 9-->
                            <td>
                                <div class="status-diode">
                                    <text>9</text>
                                </div>
                            </td>

                            <!--Кнопочка 11-->
                            <td>
                                <div class="status-diode">
                                    <text>11</text>
                                </div>
                            </td>

                            <!--Кнопочка 13-->
                            <td>
                                <div class="status-diode">
                                    <text>13</text>
                                </div>
                            </td>

                            <!--Кнопочка 15-->
                            <td>
                                <div class="status-diode">
                                    <text>15</text>
                                </div>
                            </td>

                            <!--Кнопочка 17-->
                            <td>
                                <div class="status-diode">
                                    <text>17</text>
                                </div>
                            </td>

                            <!--Кнопочка 19-->
                            <td>
                                <div class="status-diode">
                                    <text>19</text>
                                </div>
                            </td>
                        </tr>

                        <tr style="position: relative; left: -8px; top: -14px;">
                            <!--Кнопочка 2-->
                            <td>
                                <div class="status-diode">
                                    <text>2</text>
                                </div>
                            </td>

                            <!--Кнопочка 4-->
                            <td>
                                <div class="status-diode">
                                    <text>4</text>
                                </div>
                            </td>

                            <!--Кнопочка 6-->
                            <td>
                                <div class="status-diode">
                                    <text>6</text>
                                </div>
                            </td>

                            <!--Кнопочка 8-->
                            <td>
                                <div class="status-diode">
