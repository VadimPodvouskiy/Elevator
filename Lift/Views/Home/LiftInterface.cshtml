@model Lift.Models.StartupConfigurations

@{ 
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">

<head>

    <meta charset="UTF-8">

    <link rel="stylesheet" href="~/css/Body.css" />
    <link rel="stylesheet" href="~/css/Button.css" />
    <link rel="stylesheet" href="~/css/Div.css" />
    <link rel="stylesheet" href="~/css/Classes.css" />

    <style>
        .status-bar {
            background: linear-gradient(to top, rgb(106, 109, 106), #fdfdfd );
            color: black;
            border-radius: 10px;
            padding: 2px;
            text-align: center;
            margin-left: 5%;
            width: 150px;
            height: 140px;
            margin-left: 1300px;
            margin-top: -140px;
        }
    </style>

    <script>
        function Create() {
            alert("Object 'People' was created!");
        }

        function Start() {
            alert("Simulation was started!");
        }

        function Pause() {
            alert("Simulation was pauseded!")
        }

        function SpeedUp() {
            alert("Speed was increased!");
        }

        function SpeedDown() {
            alert("Speed was decreased!");
        }

        function Emergency() {
            alert("!!!WARNING!!!");
        }
    </script>

</head>

<body>
    <!-- background="~/Back.jpg";-->
    <table style="width: 1200px;">
        @{ 
            int Floors = Model.Floors + 1;
        }
        @do
        {
            Floors--;
        <tr>
